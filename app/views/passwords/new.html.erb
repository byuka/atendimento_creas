<div id="clearance" class="password-reset">
  <h2><%= t(".title") %></h2>

  <p><%= t(".description") %></p>

  <%= simple_form_for(:password, url: passwords_path, html: {class: "form-signin"}) do |f| %>
    <div class="containder">
      <%= f.input :email, label_html: { class: "sr-only" }, placeholder: "E-mail", autofocus: true, required: true %>
      <%= f.button :submit, "Enviar",  class: "btn btn-lg btn-primary btn-block" %>
    </div>

  <% end %>
</div>
