<h1>Listagem de Benefícios</h1>

<table class="table">
    <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Situação</th>
        <th colspan="1"></th>
    </tr>
    <% @beneficios.each do |beneficio| %>
        <tr>
            <td><%= beneficio.id %></td>
            <td><%= link_to beneficio.nome, beneficio %></td>
            <td>
              <% if beneficio.ativo %>
              Ativo
              <% else %>
              Inativo
              <% end %>
            </td>
            <td><%= link_to "Editar", edit_assistance_path(beneficio) %></td>
        </tr>
    <% end %>
</table>

<%= link_to  "Cadastrar benefícios", new_assistance_path %>
