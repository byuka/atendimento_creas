<h1 class="mb-5 mt-5">Listagem de Benefícios</h1>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Situação</th>
            <th colspan="2"></th>
        </tr>
        <% if @beneficios.present? %>
    </thead>
        <% @beneficios.each do |beneficio| %>
            <tr>
                <td><%= beneficio.id %></td>
                <td><%= link_to beneficio.nome, beneficio %></td>
                <td>
                <% if beneficio.ativo %>
                    Ativo
                <% else %>
                    Inativo
                <% end %>
                </td>
                <td><%= link_to "Editar", edit_assistance_path(beneficio) %></td>
            </tr>
        <% end %>
    <% else %>
        <tr>
            <td colspan="5">Nenhum benefício encontrado!</td>
        </tr>
        
    <% end %>
</table>

<%= link_to  "Cadastrar benefício", new_assistance_path %>
