<h1 class="mb-5 mt-5"><%= @tecnico.id %> - <%= @tecnico.nome %></h1>

<h4 class="text-center">Informações Gerais</h4>
<ul class="info-list">
    <li><span class="campo">Código:</span> <%= @tecnico.id %></li>
    <li><span class="campo">Nome:</span> <%= @tecnico.nome %></li>
    <li><span class="campo">Matricula:</span> <%= @tecnico.matricula %></li>
    <li><span class="campo">Cargo:</span> <%= @tecnico.matricula %></li>
    <li><span class="campo">Matricula:</span> <%= @tecnico.cargo %></li>
    <li><span class="campo">Data de cadastro:</span> <%= l @tecnico.created_at, format: :long %></li>
    <li><span class="campo">Ativo:</span>
      <% if @tecnico.ativo %>
        Sim
      <% else %>
        Não
      <% end %>
    </li>
</ul>
<hr>
<%= link_to  "Voltar", technicians_path %>

