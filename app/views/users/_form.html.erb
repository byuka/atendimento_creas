
<%= simple_form_for usuario do |f| %>
<%= f.error_notification %>

<div class="form-inputs" >
  <%= f.input :nome, label: "Nome completo: " %>
  <%= f.input :cpf, label: "CPF: " %>
  <%= f.input :email, label: "E-mail: " %>
  <% if params[:action] == "new" %>
    <%= f.input :password, label: "Senha: " %>
  <% end %>
  <%= f.input :permissao, label: "Perfil: ", collection: PERMISSOES, as: :radio_buttons %>
  <%= f.input :ativo %>
  <%= f.button :submit, "Salvar" %>
  
</div>
<% end %>
