<h1 class="h1-padrao">Listagem de Usuários</h1>

<table class="table">
    <thead class="thead-light">
        <tr>
            <th>Nome</th>
            <th>CPF</th>
            <th>Permissão</th>
            <th>Situação</th>
            <th colspan="1"></th>
        </tr>
    </thead>
    <% if @usuarios.present? %>
        <% @usuarios.each do |usuario| %>
            <tr>
                <td><%= link_to usuario.nome, usuario %></td>
                <td><%= usuario.cpf %></td>
                <td><%= usuario.permissao %></td>
                <td>
                    <% if usuario.ativo %>
                    Ativo
                    <% else %>
                    Inativo
                    <% end %>
                </td>
                <td><%= link_to "Editar", edit_user_path(usuario) %></td>

            </tr>
        <% end %>
    <% else %>
        <tr>
            <td colspan="5">Nenhum usuário encontrado!</td>
        </tr>
        
    <% end %>
</table>

<%= link_to  "Cadastrar usuário", new_user_path %>
