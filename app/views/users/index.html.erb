<h1>Listagem de Usuários</h1>

<table class="table">
    <tr>
        <th>CPF</th>
        <th>Nome</th>
        <th>Permissão</th>
        <th colspan="2"></th>
    </tr>
    <% if @usuarios.present? %>
        <% @usuarios.each do |usuario| %>
            <tr>
                <td><%= usuario.cpf %></td>
                <td><%= link_to usuario.nome, usuario %></td>
                <td><%= usuario.permissao %></td>
                <td><%= link_to "Editar", edit_user_path(usuario) %></td>
            </tr>
        <% end %>
    <% else %>
        <tr>
            <td colspan="5">Nenhum usuário encontrado!</td>
        </tr>
        
    <% end %>
</table>

<%= link_to  "Cadastrar usuário", new_user_path %>
