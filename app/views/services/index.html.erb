<h1>Listagem de Serviços</h1>

<table class="table">
    <tr>
        <th>#</th>
        <th>Nome</th>
        <th>Situação</th>
        <th colspan="1"></th>
    </tr>
    <% @servicos.each do |servico| %>
        <tr>
            <td><%= servico.id %></td>
            <td><%= link_to servico.nome, servico %></td>
            <td>
                <% if servico.ativo %>
                Ativo
                <% else %>
                Inativo
                <% end %>
            </td>
            <td><%= link_to "Editar", edit_service_path(servico) %></td>
        </tr>
    <% end %>
</table>

<%= link_to  "Cadastrar serviços", new_service_path %>
