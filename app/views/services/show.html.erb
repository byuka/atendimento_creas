<h1 class="h1-padrao"><%= @servico.id %> - <%= @servico.nome %></h1>

<h4 class="text-center">Informações Gerais</h4>
<ul class="info-list">
    <li><span class="campo">Código:</span> <%= @servico.id %></li>
    <li><span class="campo">Nome:</span> <%= @servico.nome %></li>
    <li><span class="campo">Descrição:</span> <%= @servico.descricao %></li>
    <li><span class="campo">Data de cadastro:</span> <%= l @servico.created_at, format: :long %></li>
    <li><span class="campo">Ativo:</span>
        <% if @servico.ativo %>
          Sim
        <% else %>
          Não
        <% end %>
      </li>
</ul>
<hr>
<%= link_to  "Voltar", services_path %>

