<%= simple_form_for servico do |f| %>
    <%= f.error_notification %>
    <%= f.input :nome %>
    <%= f.input :descricao, label: "Descrição" %>
    <% unless params[:action] == "new" %>
        <%= f.input :ativo %>
    <% end %>
    <%= f.button :submit, "Salvar", class:"btn-lg btn btn-outline-info btn-block" %>
<% end %>